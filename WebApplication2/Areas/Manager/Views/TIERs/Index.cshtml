@model PagedList.IPagedList<WebApplication2.Models.TIER>
@using PagedList.Mvc;
@{
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


@{
    var currentModel = new WebApplication2.Models.TIER();
}

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard","Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Tiers")">Hạng người dùng</a></li>
            </ol>
        </div>
    </div>

    @*<div class="d-flex justify-content-end mr-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Thêm hạng mới
        </button>
    </div>*@
    <hr />

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hạng người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="CreatePartialViewContainer">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hạng người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="edit-modal-body modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Index", "Tiers", FormMethod.Get, new { @class = "form-inline justify-content-between" }))
    {
        <div class="form-group ml-5">
            <label>Tên hạng: </label>
            <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="">
            <input type="submit" class="btn btn-danger" value="Tìm kiếm">
        </div>
        <div class="form-group ml-auto mr-4">
            <label class="ml-2">Sắp xếp theo: </label>
            @Html.DropDownList("sortOptions", null, htmlAttributes: new { @class = "form-control  mx-sm-3", @onchange = "this.form.submit();" })
        </div>
        <hr />
    }


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách hạng</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().TierName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().TierDiscount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().TierLevel)
                                        </th>
                                        @*<th>Thao tác</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TierName)
                                            </td>
                                            <td>
                                                @((int)item.TierDiscount) %
                                            </td>
                                            <td>
                                                @item.TierLevel.ToString("#,##0").Replace(",", ".") VNĐ
                                            </td>
                                            @*<td>
                                                <button type="button" class="btn btn-primary" id="@item.TierID" data-toggle="modal" data-target="#editModal" value="@item.TierID" onclick="loadPartialView(this.value)">
                                                    Chỉnh sửa
                                                </button>

                                            </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.PageCount > 1)
                            {
                                <hr />
                                <div class="row">
                                    <div class="col-md-6 col-lg-6 col-sm-6">
                                        @using (Html.BeginForm("Index", "Tiers", FormMethod.Get))
                                        {
                                            <p>
                                                Kích thước trang: @Html.DropDownList("size", null, new { @onchange = "this.form.submit();" })
                                            </p>
                                        }
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 text-right">
                                        Trang @(Model.PageCount < Model.PageNumber ? 0: Model.PageNumber) / @Model.PageCount
                                    </div>
                                </div>
                                @Html.PagedListPager(Model, page => Url.Action("Index", "Tiers", new { searchString = ViewBag.Keyword, page, size = ViewBag.currentSize, sortOptions = ViewBag.selectedSort }))
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<script src="~/Assets/Admin/js/jquery.js"></script>
<script>
    function loadCreatePartialView() {
        $.ajax({
            url: '/Manager/TIERs/Create',
            type: 'GET',
            success: function (data) {
                $('#CreatePartialViewContainer').html(data);
            },
            error: function () {
                $('#CreatePartialViewContainer').html("<p>Error loading partial view.</p>")
            }
        });
    }
    loadCreatePartialView();
</script>

<script>
    function loadPartialView(id) {
        $.ajax({
            url: '/Manager/TIERs/Edit',
            data: { id: id },
            type: 'GET',
            success: function (data) {
                $('.edit-modal-body').html(data);
            }
        });
    }
</script>



