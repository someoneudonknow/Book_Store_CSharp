@model WebApplication2.Models.STOCK_RECEIVED_NOTE_DETAIL

@{
    ViewBag.Title = "Create";
}

<h2>Thêm mới</h2>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p style="color:red">@ViewBag.ErrorMessage</p>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thông tin chi tiết phiếu nhập</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EditionID, "Phiên bản sách", htmlAttributes: new { @class = "control-label col-md-10" })
       
        <div class="col-md-10">
            @Html.DropDownList("EditionID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EditionID, "", new { @class = "text-danger" })
        </div>
    </div>

	<div class="form-group">
		@*@Html.LabelFor(model => model.NoteDetailQuantity, htmlAttributes: new { @class = "control-label col-md-10" })*@
		<label class="control-label col-md-10 ">Số lượng nhập</label>

		<div class="col-md-10">
			@Html.EditorFor(model => model.NoteDetailQuantity, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.NoteDetailQuantity, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@*@Html.LabelFor(model => model.NoteDetailPrice, htmlAttributes: new { @class = "control-label col-md-10", })*@
		<label class="control-label col-md-10 ">Giá nhập</label>

		<div class="col-md-10">
			@Html.EditorFor(model => model.NoteDetailPrice, new { htmlAttributes = new { @class = "form-control", oninput = "this.value = this.value.slice(0, 18)", @required = "required" } })
			@Html.ValidationMessageFor(model => model.NoteDetailPrice, "", new { @class = "text-danger" })
		</div>
	</div>


    @if (ViewBag.HiddenStockID == true)
    {
        @Html.HiddenFor(model => model.StockReceivedNoteID)
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.StockReceivedNoteID, "StockReceivedNoteID", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-10">
                @Html.DropDownList("StockReceivedNoteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StockReceivedNoteID, "", new { @class = "text-danger" })
            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default" />
        </div>
    </div>
</div>
    }

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
