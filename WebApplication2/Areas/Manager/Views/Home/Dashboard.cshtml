﻿@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
	<div class="container-fluid mt-3">
		<div class="row">
			<div class="col-lg-3 col-sm-6">
				<div class="card gradient-1">
					<div class="card-body">
						<h3 class="card-title text-white">Số lượng sản phẩm đã bán</h3>
						<div class="d-inline-block">
							@if (ViewBag.numberOfSoldProduct != null)
							{
								<h2 class="text-white">@ViewBag.numberOfSoldProduct sản phẩm</h2>
							}
							else
							{
								<h2 class="text-white">0 sản phẩm</h2>
							}
							<p class="text-white mb-0">2023 - Hiện tại</p>
						</div>
						<span class="float-right display-5 opacity-5">
							<i class="fa fa-shopping-cart"></i>
						</span>
					</div>
				</div>
			</div>
			<div class="col-lg-3 col-sm-6">
				<div class="card gradient-2">
					<div class="card-body">
						<h3 class="card-title text-white">Tổng doanh thu</h3>
						<div class="d-inline-block">
							@if (ViewBag.revenue != null)
							{
								<h2 class="text-white">@ViewBag.revenue.ToString("#,##0").Replace(",", ".") VNĐ</h2>

							}
							else
							{
								<h2 class="text-white">0 VNĐ</h2>
							}
							<p class="text-white mb-0">2023 - Hiện tại</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-3 col-sm-6">
				<div class="card gradient-3">
					<div class="card-body">
						<h3 class="card-title text-white">Tổng người dùng</h3>
						<div class="d-inline-block">
							@if (ViewBag.numberOfUser != null)
							{
								<h2 class="text-white">@ViewBag.numberOfUser người</h2>
							}
							else
							{
								<h2 class="text-white">0</h2>
							}
						</div>
						<span class="float-right display-5 opacity-5">
							<i class="fa fa-users"></i>
						</span>
					</div>
				</div>
			</div>
			<div class="col-lg-3 col-sm-6">
				<div class="card gradient-4">
					<div class="card-body">
						<h3 class="card-title text-white">Mức độ hài lòng</h3>
						<div class="d-inline-block">
							@if (ViewBag.satisfaction != null)
							{
								<h2 class="text-white">@ViewBag.satisfaction %</h2>
							}
							else
							{
								<h2 class="text-white">0</h2>
							}
							<p class="text-white mb-0">2023 - Hiện tại</p>
						</div>
						<span class="float-right display-5 opacity-5">
							<i class="fa fa-heart"></i>
						</span>
					</div>
				</div>
			</div>
		</div>


	</div>
</div>
<!-- #/ container -->
