
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Quản lý mua bán sách</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Assets/Admin/css/style.css" rel="stylesheet">
    @Styles.Render("~/Content/PagedList.css")
    <script src="~/Assets/Admin/js/jquery.js"></script>



</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <div class="brand-logo">

                <a onclick="location.href='@Url.Action("Dashboard","Home")'">
                    <b class="logo-abbr"><img src="~/Assets/Admin/images/new-logo.jpg" alt=""> </b>
                    <span class="logo-compact"><img src="" alt=""></span>
					<span class="brand-title">
						<img src="~/Assets/Admin/images/logo_manager.png" style="width:87px; height:20px" alt="">
					</span>
                </a>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->
        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content clearfix">

                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>

                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative" data-toggle="dropdown">
                                <span class="activity active"></span>
                                <img src="~/Assets/Admin/images/logo-text.png" style="background:black" height="40" width="40" alt="">
                            </div>
                            <div class="drop-down dropdown-profile   dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post ))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="submit" style="width:100%" value="Đăng xuất" class="btn btn-default" id="logoutButton" />
                                            }
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="nk-sidebar">
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label">Dashboard</li>
                    <li>
                        <!--<a class="has-arrow" href="javascript:void()" aria-expanded="false">
            <i class="icon-speedometer menu-icon"></i><span class="nav-text">Dashboard</span>
        </a>
        <ul aria-expanded="false">
            <li><a href="./index.html">Home 1</a></li>-->
                        <!-- <li><a href="./index-2.html">Home 2</a></li> -->
                        <!--</ul>-->
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý sách</span>
                        </a>
                        <ul aria-expanded="false">

                            <li>
                                @Html.ActionLink("Sách", "Index", "BOOK_EDITION")
                            </li>
                            <li>
                                @Html.ActionLink("Bộ sách", "Index", "BOOK_COLLECTION")
                            </li>
                            <li>
                                @Html.ActionLink("Chương trình khuyến mãi", "Index", "Promotions")
                            </li>
                            <li>
                                @Html.ActionLink("Danh mục", "Index", "CATEGORIES")
                            </li>

                        </ul>
                    </li>

                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý tài khoản</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Tài khoản", "Index", "User")
                            </li>
                            @*<li>
                                @Html.ActionLink("Hạng người dùng", "Index", "Tiers")
                            </li>*@
                        </ul>
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý nguồn nhập</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Nhà xuất bản", "Index", "Publishers")
                            </li>
                            <li>
                                @Html.ActionLink("Phiếu nhập", "Index", "Stock_received_note")
                            </li>
                            <li>
                                @Html.ActionLink("Kho hàng", "Index", "STOCK_INVENTORY")
                            </li>
                        </ul>
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý đơn hàng</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Danh sách đơn hàng", "Index", "CustomerOrderForManager")
                            </li>
                        </ul>
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Thống kê</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Thông kê doanh thu", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Thống kê số lượng bán ra trong tháng", "GetBuyCountOfCurrentMonth", "Home")
                            </li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->
        @RenderBody()
        <!--**********************************
            Footer start
        ***********************************-->
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/Assets/Admin/plugins/common/common.min.js"></script>

    <script src="~/Assets/Admin/js/custom.min.js"></script>
    <script src="~/Assets/Admin/js/settings.js"></script>
    <script src="~/Assets/Admin/js/gleek.js"></script>
    <script src="~/Assets/Admin/js/styleSwitcher.js"></script>


</body>

</html>
